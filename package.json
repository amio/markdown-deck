{
  "name": "markdown-deck",
  "version": "1.7.3",
  "description": "A web component for presenters",
  "repository": "amio/markdown-deck",
  "main": "dist/markdown-deck.js",
  "unpkg": "dist/markdown-deck.min.js",
  "license": "MIT",
  "scripts": {
    "pretest": "tsc src/utils.ts --outDir dist",
    "test": "tape test/*.js",
    "start": "nodemon -w src -e js,ts -x 'npm run now-build && serve public'",
    "build": "rm -rf dists/* && bili --format iife-min,cjs",
    "build-deck": "rm -rf public && mkdir public && cp -R dist public && cp *.html deck.* public",
    "now-build": "npm run build && npm run build-deck",
    "prepack": "npm run build"
  },
  "dependencies": {
    "lit-element": "2.3.1",
    "lit-html": "^1.1.2",
    "marked": "^1.1.0",
    "prismjs": "^1.20.0"
  },
  "devDependencies": {
    "bili": "^4.10.1",
    "nodemon": "^2.0.4",
    "rollup-plugin-typescript2": "^0.27.1",
    "tape": "^5.0.1",
    "typescript": "^4.0.3"
  }
}
