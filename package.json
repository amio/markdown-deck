{
  "name": "markdown-deck",
  "version": "1.6.1",
  "description": "A web component for presenters",
  "repository": "amio/markdown-deck",
  "main": "dist/markdown-deck.js",
  "unpkg": "dist/markdown-deck.min.js",
  "license": "MIT",
  "scripts": {
    "pretest": "tsc src/markdeck.ts --outDir dist",
    "test": "tape test/*.js",
    "start": "bili -w --format iife & es-dev-server -a index.html -o",
    "build": "rm -rf dist && bili src/index.ts --format iife-min,cjs",
    "build-deck": "rm -rf public && mkdir public && cp -R dist public && cp *.html deck.* public",
    "now-build": "npm run build && npm run build-deck",
    "prepack": "npm run build"
  },
  "dependencies": {
    "lit-element": "2.2.1",
    "lit-html": "^1.1.2",
    "marked": "^0.7.0",
    "prismjs": "^1.17.1"
  },
  "devDependencies": {
    "bili": "^4.8.1",
    "es-dev-server": "^1.23.1",
    "rollup-plugin-typescript2": "^0.25.2",
    "tape": "^4.11.0",
    "typescript": "^3.7.2"
  }
}
