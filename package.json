{
  "name": "markdown-deck",
  "version": "0.0.0",
  "description": "the web component for presenters",
  "repository": "amio/markdown-deck",
  "scripts": {
    "start": "bili -w --format iife & es-dev-server -a demo/index.html -o",
    "build": "rm -rf dist && bili --format iife --minify",
    "build-deck": "rm -rf public && mkdir public && cp -R dist public && cp index.html deck.md public",
    "now-build": "npm run build && npm run build-deck",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "2.2.10",
    "lit-element": "2.2.1",
    "lit-html": "^1.1.2",
    "marked": "^0.7.0"
  },
  "devDependencies": {
    "bili": "^4.8.1",
    "es-dev-server": "^1.18.0",
    "rollup-plugin-typescript2": "^0.24.2",
    "typescript": "^3.6.3"
  }
}
